<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
       
       
       <bean id="car" class="tester.Car">
       <property name="id" value="000" ></property>
       <property name="name" value="audi" ></property>
       <property name="topspeed" value="100" ></property>
       <property name="cost" value="55.0" ></property>
       </bean>   
         
       <bean id="bike" class="tester.Bike">
       <constructor-arg  index ="0" value="r15"></constructor-arg>
       <constructor-arg  index ="1" value="150"></constructor-arg>
       </bean>                   
                           
                           
</beans>
                           
   